    folder: 'isaac/acceptance5/almalinux-8-x86_64'
    datastore: 'vmpooler_acceptance5'
    clone_target: 'acceptance5'
    size: 0
    datacenter: 'pix'
    provider: 'vsphere'
    snapshot_mainMem_ioBlockPages: '2048'
    snapshot_mainMem_iowait: '5'
    network: 'vmpooler2'
    dns_plugin: 'delivery'
