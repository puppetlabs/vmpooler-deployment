  :vsphere:
    connection_pool_size: 65
    connection_pool_timeout: 200
    insecure: true
    password: 1Skip-vervain-alter-teethe
    provider_class: vsphere
    server: vcenter-ci-prod-2.it.puppet.net
    username: vmpooler@vsphere.local

:prometheus:
  prefix: 'vmpooler-local'

:redis:
  server: 'redis-server'

:auth:
